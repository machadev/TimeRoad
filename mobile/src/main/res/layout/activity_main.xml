<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.machadev.android.timeroad.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="声質/速さ/高さ/テキストを設定してください." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="声質"
            />
        <Spinner
            android:id="@+id/spinnerVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:entries="@array/array_voice"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="速さ"
            />
        <EditText
            android:id="@+id/etRate"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:inputType="numberDecimal"
            android:text="1.00"
            />
        <Button
            android:id="@+id/btnRateLow"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="遅く(-0.1)"/>
        <Button
            android:id="@+id/btnRateNormal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="普通(1.00)"/>
        <Button
            android:id="@+id/btnRateHigh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="速く(+0.1)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="高さ"
            />
        <EditText
            android:id="@+id/etPitch"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:inputType="numberDecimal"
            android:text="1.00"
            />
        <Button
            android:id="@+id/btnPitchLow"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="低く(-0.1)"/>
        <Button
            android:id="@+id/btnPitchNormal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="普通(1.00)"/>
        <Button
            android:id="@+id/btnPitchHigh"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="高く(+0.1)"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="テキスト"
            />
        <EditText
            android:id="@+id/etText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="こんにちは"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnSpeech"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="しゃべる"/>

        <Button
            android:id="@+id/btnAddList"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:padding="2dp"
            android:text="リストに追加"/>

        <Button
            android:id="@+id/btnSetup"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:padding="2dp"
            android:text="データセット"/>

        <Button
            android:id="@+id/btnRandomTest"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:padding="2dp"
            android:text="今何時？"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:orientation="vertical">

        <!-- ListViewヘッダー -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:layout_margin="2dip"
                android:gravity="right|center_vertical"
                android:padding="2dip"
                android:textColor="#ff000000"
                android:text="No."
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:gravity="center|center_vertical"
                android:padding="2dip"
                android:textColor="#ff000000"
                android:text="声質"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:gravity="center|center_vertical"
                android:padding="2dip"
                android:textColor="#ff000000"
                android:text="速さ"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:gravity="center|center_vertical"
                android:padding="2dip"
                android:textColor="#ff000000"
                android:text="高さ"
                android:textSize="16sp"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:gravity="left|center_vertical"
                android:padding="2dip"
                android:textColor="#ff000000"
                android:text="テキスト"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dip"
                android:gravity="center|center_vertical"
                android:padding="2dip"
                />
        </LinearLayout>

        <ListView
            android:id="@+id/lvVoiceInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffffff"
            android:cacheColorHint="#ff0080c0"
            android:divider="#ff0080c0"
            android:dividerHeight="1sp"
            android:scrollbarStyle="outsideOverlay"
            >

        </ListView>
    </LinearLayout>

</LinearLayout>
